{
  "name": "kameleon-agent",
  "version": "0.1.0",
  "author": "Minkyu Lee",
  "engines": {
    "node": "8.11.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kameleon-project/kameleon-agent.git"
  },  
  "main": "./app.js",
  "scripts": {
    "start": "electron ./app",
    "install": "electron-rebuild",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder"
  },
  "dependencies": {
    "http-shutdown": "^1.2.0",
    "serialport": "^7.1.4",
    "socket.io": "^1.7.2"
  },
  "devDependencies": {
    "electron": "^4.1.0",
    "electron-builder": "^20.39.0",
    "electron-rebuild": "^1.8.4",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.1"
  },
  "build": {
    "appId": "io.kameleon.kameleon-agent",
    "productName": "Kameleon Agent",
    "copyright": "CopyrightÂ© MKLabs Co.,Ltd.",
    "electronCompile": false,
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "perMachine": true
    }
  },
  "publish": {
    "provider": "github",
    "repo": "kameleon-agent",
    "owner": "kameleon-project"
  }
}
